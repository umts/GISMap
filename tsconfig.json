{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "amd",
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "es5",
    "lib": [
      "es2015",
      "dom",
      "es2018.promise"
    ],
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "removeComments": true,
    "outDir": "./out/app",
    "baseUrl": "./",
    "paths": {
      "tslib" : ["node_modules/tslib/tslib.d.ts"]
    }
  },
  "include": [
    "./app/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
